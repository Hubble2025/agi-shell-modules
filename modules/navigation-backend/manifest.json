{
  "$schema": "https://agi-shell-cms.com/schemas/module-manifest-v1.json",
  "module_id": "navigation-backend",
  "version": "1.4.0",
  "name": "Navigation Backend Module",
  "description": "Enterprise-grade navigation management system with hierarchical structure, role-based access control, and comprehensive audit logging. v1.4.0 is a complete standalone module with all components, services, and migrations included.",
  "author": "Sebastian HÃ¼hn",
  "license": "OPSL-1.0",
  "compat": {
    "agi_shell_cms": ">=1.9.0",
    "boltnew": "*",
    "semantic_os": "*",
    "aion": "*"
  },
  "dependencies": {
    "supabase": ">=2.0.0",
    "postgres": ">=14.0.0",
    "react": ">=18.0.0",
    "lucide-react": ">=0.300.0"
  },
  "provides": {
    "api": [
      "/api/navigation/items",
      "/api/navigation/tree",
      "/api/navigation/logs"
    ],
    "components": [
      "NavigationLiveView",
      "NavigationSettingsPanel",
      "NavigationItemForm",
      "NavigationIcon"
    ],
    "services": [
      "NavigationService"
    ],
    "types": [
      "NavigationItem",
      "NavigationLog"
    ],
    "database": {
      "tables": [
        "navigation_items",
        "navigation_logs",
        "navigation_settings",
        "navigation_groups",
        "navigation_ui_settings",
        "navigation_assets",
        "navigation_icons"
      ],
      "migrations": [
        "20250119000001_navigation_backend_schema.sql",
        "20250119000002_navigation_backend_indexes.sql",
        "20250119000003_navigation_backend_advanced_indexes.sql",
        "20250119000004_navigation_backend_settings.sql",
        "20251119050637_20250119000005_tenant_id_and_feature_flags.sql",
        "20251119050718_20250119000006_ui_settings_and_assets.sql",
        "20251119050739_20250119000007_icon_system.sql",
        "20251119050905_20250119000008_default_groups_and_structure.sql"
      ]
    },
    "events": [
      "navigation:item:created",
      "navigation:item:updated",
      "navigation:item:deleted"
    ]
  },
  "module_structure": {
    "supabase/migrations": "Database migration files",
    "src/components": "React components for navigation UI",
    "src/services": "Business logic and API services",
    "src/types": "TypeScript type definitions",
    "src/lib": "Supabase client configuration"
  },
  "features": {
    "hierarchical_navigation": {
      "description": "Unlimited depth tree structure with parent-child relationships",
      "enabled": true
    },
    "role_based_access": {
      "description": "Fine-grained role-based visibility control",
      "enabled": true
    },
    "audit_logging": {
      "description": "Comprehensive change tracking with actor attribution",
      "enabled": true
    },
    "performance_optimized": {
      "description": "Optimized indexes for large-scale deployments (v1.3.1)",
      "enabled": true,
      "version": "1.3.1"
    },
    "advanced_db_tier": {
      "description": "Optional enterprise-grade indexes for 1000+ items (v1.3.2)",
      "enabled": false,
      "optional": true,
      "version": "1.3.2",
      "performance_gain": "40-60% over v1.3.1"
    }
  },
  "configuration": {
    "max_depth": {
      "type": "integer",
      "default": 10,
      "description": "Maximum allowed navigation tree depth"
    },
    "default_roles": {
      "type": "array",
      "default": ["authenticated"],
      "description": "Default roles for new navigation items"
    },
    "enable_audit": {
      "type": "boolean",
      "default": true,
      "description": "Enable comprehensive audit logging"
    },
    "enable_advanced_nav_indexes": {
      "type": "boolean",
      "default": false,
      "description": "Enable Advanced DB Tier indexes for enterprise-scale (v1.3.2)",
      "recommended_when": "item_count > 500"
    }
  },
  "tags": ["navigation", "menu", "cms", "backend", "enterprise", "rbac", "audit"]
}
